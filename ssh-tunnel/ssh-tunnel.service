[Unit]
StartLimitIntervalSec=0    
Wants=home-assistant.service
After=home-assistant.service

[Service]
ExecStart=/usr/bin/ssh -N -R 8123:127.0.0.1:8123 spbear@spbear.com
Restart=Always
RestartSec=2
StandardOutput=syslog
StandardError=syslog
User=homeassistant
Group=homeassistant
